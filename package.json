{
    "name": "sheets_env",
    "version": "1.0.8",
    "description": "Google sheets powered env management",
    "main": "build/index.js",
    "scripts": {
        "build": "tsc",
        "deploy": "node -e \"require('./.github/deploy.js').deploy()\"",
        "test": "mocha --package package.json",
        "nt": "nodemon --exec nyc --reporter html npm run test",
        "ntt": "nodemon --exec npm run test",
        "coverage-watch": "live-server coverage",
        "bump": "npm --no version patch",
        "pretty-quick": "pretty-quick --staged"
    },
    "dependencies": {
        "google-auth-library": "^7.10.2",
        "open": "^8.4.0",
        "sinon": "^12.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run bump && npm run pretty-quick"
        }
    },
    "files": [
        "build/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mendeljacks/sheets_env.git"
    },
    "author": "Mendel",
    "license": "MIT",
    "keywords": [
        "env",
        "management",
        "sheets",
        "google",
        "oauth"
    ],
    "bugs": {
        "url": "https://github.com/mendeljacks/sheets_env/issues"
    },
    "homepage": "https://github.com/mendeljacks/sheets_env#readme",
    "contributors": [
        {
            "name": "Mendel Jacks",
            "email": "mendeljacks@gmail.com",
            "url": "http://mendeljacks.com"
        }
    ],
    "devDependencies": {
        "@jsdevtools/npm-publish": "^1.4.3",
        "@types/mocha": "^8.2.3",
        "@types/node": "^16.11.11",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "chai": "^4.3.4",
        "eslint": "^8.3.0",
        "husky": "^7.0.4",
        "live-server": "^1.2.1",
        "mocha": "^9.0.1",
        "nyc": "^15.1.0",
        "prettier": "^2.5.0",
        "pretty-quick": "^3.1.2",
        "sucrase": "^3.19.0",
        "tsc": "^2.0.3",
        "typescript": "^4.3.5"
    },
    "mocha": {
        "require": [
            "sucrase/register/ts"
        ],
        "spec": "src/**/*.test.ts",
        "timeout": 0
    },
    "nodemonConfig": {
        "verbose": true,
        "legacyWatch": true,
        "ignore": [
            "node_modules",
            "build"
        ],
        "watch": [
            "./"
        ],
        "exec": "npm test",
        "ext": "ts, js"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "@typescript-eslint/no-explicit-any": "off",
            "no-async-promise-executor": "off",
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "never"
            ],
            "camelcase": "warn"
        }
    }
}
